	name = Bj√∂rn Andersson
	email = ba@sanitarium.se
[color]
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[alias]
	st = status
	sw = switch
	ci = commit
	br = branch
	co = checkout
	df = diff --cached
	lg = log -p
	who = shortlog -s --
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	pushf = push --force-with-lease
	fix = commit --fixup
[push]
	default = simple
	autoSetupRemote = true
[url "git@github.com:"]
	insteadOf = https://github.com/
[branch]
	sort = -committerdate
